@import "bootstrap-sprockets";
@import "bootstrap";
@import "font-awesome";

/*
 * Globals
 */

/* Links */
a.home,
a.home:focus,
a.home:hover {
    color: #fff;
    cursor: pointer;
}

textarea{
  resize: none;
}

/* Custom default button */
.btn{
  border-radius: 0px;
}

.btn-default,
.btn-default:hover,
.btn-default:focus {
    color: #333;
    text-shadow: none;
 /* Prevent inheritence from `body` */
    background-color: #fff;
    border: 1px solid #fff;
}

.modal-content{
  border-radius: 0px;
}


/*
 * Base structure
 */

html,
body {
    height: 100%;
    font-family: 'Raleway', sans-serif;
}

.normal{
  color: black;
}

.form-control{
  border-radius: 0;
}

.input-group{
  margin-bottom: 10px;
}

/* Extra markup and styles for table-esque vertical and horizontal centering */

.main-content{
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
}

.site-wrapper {
    color: #fff;
    text-align: center;
    /*text-shadow: 0 1px 3px rgba(0,0,0,.5);*/
    display: table;
    width: 100%;
    height: 100%;
    background: url(image_path('beers.gif')) no-repeat;
    background-size: cover;
 /* For at least Firefox */
    min-height: 100%;
    -webkit-box-shadow: inset 0 0 100px rgba(0,0,0,.5);
    box-shadow: inset 0 0 100px rgba(0,0,0,.5);
}


.site-wrapper-inner {
    display: table-cell;
    vertical-align: top;
}

.cover-container {
    margin-right: auto;
    margin-left: auto;
}

/* Padding for spacing */
.inner {
    padding: 30px;
}

.glyphicon-heart{
  color: #FA5858;
}

.fa-beer{
  color: #DF7401;
}

/*
 * Header
 */

header{
  background-color: #0080FF;
  a{
    color: #fff;
    cursor: pointer;
  }
  a.glyphicon-align-justify{
    color: #fff;
    font-size: 1.5em;
    margin: 10px 18px 0 0;
  }
}


.masthead-brand {
    margin-top: 10px;
    margin-bottom: 10px;
}

.masthead-nav > li {
    display: inline-block;
}

.masthead-nav > li + li {
    margin-left: 20px;
}

.masthead-nav > li > a {
    padding-right: 0;
    padding-left: 0;
    font-size: 16px;
    font-weight: bold;
    color: #fff;
 /* IE8 proofing */
    color: rgba(255,255,255,.75);
    border-bottom: 2px solid transparent;
}

.masthead-nav > li > a:hover,
.masthead-nav > li > a:focus {
    background-color: transparent;
    border-bottom-color: #a9a9a9;
    border-bottom-color: rgba(255,255,255,.25);
}

.masthead-nav > .active > a,
.masthead-nav > .active > a:hover,
.masthead-nav > .active > a:focus {
    color: #fff;
    border-bottom-color: #fff;
}

@media (min-width: 768px) {
    .masthead-brand {
        float: left;
    }

    .masthead-nav {
        float: right;
    }
}

.form{
  margin-top: 150px;
}


/*
 * Cover
 */

.cover {
    padding: 0 20px;
}

.cover .btn-lg {
    padding: 10px 20px;
    font-weight: bold;
}


/*
 * Footer
 */

.mastfoot {
    color: #fff;
 /* IE8 proofing */
    color: rgba(255,255,255,.5);
}


/*
 * Affix and center
 */

@media (min-width: 768px) {
  /* Pull out the header and footer */
    .masthead {
        position: fixed;
        top: 0;
    }

    .mastfoot {
        position: fixed;
        bottom: 0;
    }
  /* Start the vertical centering */
    .site-wrapper-inner {
        vertical-align: middle;
    }
  /* Handle the widths */
    .masthead,
  .mastfoot,
  .cover-container {
        width: 100%;
 /* Must be percentage or pixels for horizontal alignment */
    }
}

@media (min-width: 992px) {
    .masthead,
  .mastfoot,
  .cover-container {
        width: 700px;
    }
}

/* Hide for mobile, show later */
.sidebar {
    display: none;
}

@media (min-width: 768px) {
    .sidebar {
        position: fixed;
        top: 51px;
        bottom: 0;
        left: 0;
        z-index: 1000;
        display: block;
        padding: 20px;
        overflow-x: hidden;
        overflow-y: auto;
 /* Scrollable contents if viewport is shorter than content. */
        background-color: #f5f5f5;
        border-right: 1px solid #eee;
    }
}

/* Sidebar navigation */
.nav-sidebar {
    margin-right: -21px;
 /* 20px padding + 1px border */
    margin-bottom: 20px;
    margin-left: -20px;
}

.nav-sidebar > li > a {
    padding-right: 20px;
    padding-left: 20px;
}

.nav-sidebar > .active > a,
.nav-sidebar > .active > a:hover,
.nav-sidebar > .active > a:focus {
    color: #fff;
    background-color: #428bca;
}

/*
 * Slide menu
 *
 */

.slide-menu{
  height: 100%;
  width: 0;
  position: fixed;
  z-index: 1;
  right: 0;
  top: 0;
  background-color: #424242;
  transition: width 0.5s ease;
  color: #fff;
  font-size: 1.5em;
  ul{
    width: 100%;
    padding: 0;
    li{
      list-style-type: none;
      width: 100%;
      margin: 0;
      padding: 10px 0;
      text-align: center;
      &:hover{
        background-color: #6E6E6E;
      }
      a{
        color: #fff;
        cursor: pointer;
      }
    }
  }
  span.glyphicon{
    cursor: pointer;
  }
  .glyphicon-remove{
    margin: 10px 0 0 220px;
  }
}

// Animation for menu

.pushed-menu{
  width: 250px;
}

/*
 * Main content
 */

.main {
    padding: 20px;
}

@media (min-width: 768px) {
    .main {
        padding-right: 40px;
        padding-left: 40px;
    }
}

.main .page-header {
    margin-top: 0;
}


/*
 * Placeholder dashboard ideas
 */

.placeholders {
    margin-bottom: 30px;
    text-align: center;
}

.placeholders h4 {
    margin-bottom: 0;
}

.placeholder {
    margin-bottom: 20px;
}

.placeholder img {
    display: inline-block;
    border-radius: 50%;
}
